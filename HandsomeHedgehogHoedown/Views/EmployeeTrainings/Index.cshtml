@model IEnumerable<HandsomeHedgehogHoedown.Models.EmployeeTraining>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingProgram)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainingProgram.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeTrainingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeTrainingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeTrainingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
