@model IEnumerable<HandsomeHedgehogHoedown.Models.TrainingProgram>

@{
    ViewData["Title"] = "Index";
}

<h2>Training Programs</h2>

<!-- Authored By: Tamela Lerma -->

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxCapacity)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

<!-- for each training program, if the start date is greater than or equal to today's date, list its details. -->
@foreach (var item in Model)
{
    @if (item.StartDate >= DateTime.Today) { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingProgramId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingProgramId">Details</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Create New</a>
</p>
