    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<!-- Authored By: Tamela Lerma -->

<div>
    <h4>TrainingProgram</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tp.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tp.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.tp.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.tp.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.tp.EndDate)
        </dt>
